{
    "manifest_version": 3,
    "name": "Trin",
    "version": "0.1.1",
    "description": "Transliterate among Indian scripts",
    "icons": {
        "32": "icons/32.png",
        "256": "icons/256.png"
    },
    "content_scripts": [{
        "css": ["trin.css"],
        "js": ["trinContentScript.js"],
        "matches": ["<all_urls>"]
    }],
    "web_accessible_resources": [{
        "resources": ["trin.js"],
        "matches": ["<all_urls>"]
    }],
    "browser_specific_settings": {
        "gecko": {"id": "trin@ekujupr.me"}
    }
}
